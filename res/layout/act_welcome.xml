<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_welcome" >

   <Button
        android:id="@+id/met_launch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/met_about"
        android:layout_alignLeft="@+id/met_about"
        android:text="@string/launch" />

    <Button
        android:id="@+id/met_about"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/met_exit"
        android:layout_alignParentRight="true"
        android:text="@string/about" />

    <Button
        android:id="@+id/met_muqodimah"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/met_launch"
        android:layout_alignLeft="@+id/met_launch"
        android:text="@string/muqodimah" />

    <Button
        android:id="@+id/met_exit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/met_about"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="@string/exit" />
    
</RelativeLayout>